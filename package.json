{
  "name": "create-thunder-app",
  "version": "1.3.2",
  "private": false,
  "type": "module",
  "description": "A monorepo template with Vite React frontend, HonoJS backend, and shared lib package",
  "keywords": [
    "template",
    "monorepo",
    "react",
    "vite",
    "hono",
    "bun",
    "typescript"
  ],
  "bin": {
    "create-thunder-app": "bin/create.js"
  },
  "files": [
    "bin",
    "scripts",
    "backend/src",
    "backend/drizzle.config.ts",
    "backend/package.json",
    "backend/tsconfig.json",
    "frontend/src",
    "frontend/public",
    "frontend/index.html",
    "frontend/package.json",
    "frontend/vite.config.ts",
    "frontend/tailwind.config.js",
    "frontend/postcss.config.js",
    "frontend/tsconfig.json",
    "lib/src",
    "lib/package.json",
    "lib/tsconfig.json",
    ".gitignore",
    "README.md",
    "package.json"
  ],
  "workspaces": [
    "frontend",
    "lib",
    "backend"
  ],
  "scripts": {
    "build": "bun run build:lib && bun run typecheck && bun run lint && bun run build:frontend && bun run build:backend",
    "build:all": "bun run build:lib && bun run build:frontend && bun run build:backend",
    "build:backend": "bun run --filter @thunder-app/backend build",
    "build:frontend": "bun run --filter @thunder-app/frontend build",
    "build:lib": "bun run --filter @thunder-app/lib build",
    "dev": "node scripts/dev.js",
    "dev:backend": "bun run --filter @thunder-app/backend dev",
    "dev:frontend": "bun run --filter @thunder-app/frontend dev",
    "dev:lib": "bun run --filter @thunder-app/lib dev",
    "db:generate": "bun run --filter @thunder-app/backend db:generate",
    "db:migrate": "bun run --filter @thunder-app/backend db:migrate",
    "db:push": "bun run --filter @thunder-app/backend db:push",
    "db:studio": "bun run --filter @thunder-app/backend db:studio",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "bun run format:check && bun run lint:eslint",
    "lint:eslint": "bun run --filter '*' lint",
    "lint:fix": "bun run format && bun run --filter '*' lint --fix",
    "typecheck": "bun tsc -b --clean && bun tsc -b"
  },
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "eslint-plugin-sort-keys": "^2.3.5",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "prettier": "^3.2.5",
    "typescript": "^5.9.0"
  }
}
